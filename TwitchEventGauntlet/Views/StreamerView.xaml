                                </Style.Triggers>
                            </Style>
                        </Image.Style>
                    </Image>
                    <Image Grid.Column="1" Grid.Row="4" Source="{Binding SmallItemPaths[9]}" Margin="5" Width="10" Height="10" HorizontalAlignment="Right" VerticalAlignment="Top">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="MouseEnter">
